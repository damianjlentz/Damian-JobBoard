@model JobBoardv3.DATA.EF.Application

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pageTitleContainer">
    <div class="pageTitle">Edit Application</div>
</div>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal editUserContainer">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ApplicationId)
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.OpenPositionId)

    @*<div class="flexSpaceBetween sectionMargin">
        <div class="sectionName sectionNameWidth">Position</div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.OpenPosition.Position.Title)
            @Html.EditorFor(model => model.OpenPosition.OpenPositionId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.OpenPositionId, "", new { @class = "text-danger" })
        </div>
    </div>*@

    <div class="flexSpaceBetween sectionMargin">
        <div class="sectionName sectionNameWidth">Title</div>
        <div class="col-md-10">
            <div class="form-control form-container">@Model.OpenPosition.Position.Title</div>
        </div>
    </div>

    <div class="flexSpaceBetween sectionMargin">
        <div class="sectionName sectionNameWidth">Store Number</div>
        <div class="col-md-10">
            <div class="form-control form-container">@Model.OpenPosition.Location.StoreNumber</div>
        </div>
    </div>

    <div class="flexSpaceBetween sectionMargin">
        <div class="sectionName sectionNameWidth">Application Date</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ApplicationDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ApplicationDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="flexSpaceBetween sectionMargin">
        <div class="sectionName sectionNameWidth">Manager Notes</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ManagerNotes, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ManagerNotes, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="flexSpaceBetween sectionMargin">
        <div class="sectionName sectionNameWidth">Status</div>
        <div class="col-md-10">
            @*@Html.DropDownList("Application Status", null, htmlAttributes: new { @class = "form-control" })*@
            <select id="ApplicationStatus" name="ApplicationStatus" class="form-control">
                @foreach (var item in ViewBag.ApplicationStatus)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
            @Html.ValidationMessageFor(model => model.ApplicationStatus, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="flexSpaceBetween sectionMarginLast">
        <div class="sectionName sectionNameWidth">Resume File</div>
        <div class="col-md-10">
            <div class="form-control form-container">@Model.UserDetail.ResumeFilename</div>
        </div>
    </div>

    <div class="editUserSaveContainer">
        <input type="submit" value="Save" class="applyButton" />
    </div>

    <div class="backButtonContainer">
        @Html.ActionLink("Back to List", "Index", new { }, new { @class = "actionButton" })
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
