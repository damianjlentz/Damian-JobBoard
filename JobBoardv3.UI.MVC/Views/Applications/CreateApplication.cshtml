@model JobBoardv3.DATA.EF.Application

@{
    ViewBag.Title = "CreateApplication";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //var JobTitle = ViewBag.JobTitle;
    //var UserEmail = ViewBag.UserEmail;
}


<h2 class="topstyle">CreateApplication</h2>


@using (Html.BeginForm("CreateApplication", "Applications", FormMethod.Post, new

{
enctype = "multipart/form-data"
}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Application</h4>
        <hr />
        @Html.HiddenFor(model => model.OpenPositionId)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="control-label col-md-2 form-label">Job Title</div>
            <div class="col-md-10">
                <div class="form-control form-container">@ViewBag.JobTitle</div>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2 form-label">User Email</div>
            <div class="col-md-10">
                <div class="form-control form-container">@ViewBag.UserEmail</div>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2 form-label">First Name</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control form-container" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2 form-label">Last Name</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control form-container" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2 form-label">Resume File</div>
            <div class="col-md-10">
                @*@using (Html.BeginForm("UploadResume", "Applications", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {*@
                <div>
                    <input type="file" name="ResumeFile" />
                    @*@Html.TextBox("ResumeFile", "", new { type = "file" }) <br />*@
                    @*<input type="submit" value="Upload Resume" class="btn btn-default" />
                        @ViewBag.Message*@
                </div>
                @*}*@
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create Application" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
