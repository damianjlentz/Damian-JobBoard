@model IEnumerable<IdentitySample.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<div class="pageTitleContainer">
    <div class="pageTitle">User Admin</div>
</div>

<div class="cardContainer">
    <div class="createContainer">
        @Html.ActionLink("+", "Create", new { }, new { @class = "actionButton" })
    </div>
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="roleName">
                @Html.DisplayFor(modelItem => item.UserName)
            </div>
            <div class="cardActions">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "actionButton" })
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "actionButton" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "actionButton" })
            </div>
        </div>
    }
</div>
