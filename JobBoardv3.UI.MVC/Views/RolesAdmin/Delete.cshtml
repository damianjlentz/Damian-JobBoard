@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Delete";
}

<div class="pageTitleContainer">
    <div class="pageTitle">Delete</div>
</div>

<div  class="editUserContainer">
    <h3>Are you sure you want to delete this Role? </h3>
    <p>Deleting this Role will remove all users from this role. It will not delete the users.</p>
    <div>
        <div  class="flexSpaceBetween  sectionMarginLast">
            <div class="sectionName">Role</div>
            <div>
                @Html.DisplayFor(model => model.Name)
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <div class="editUserSaveContainer">
                <input type="submit" value="Delete" class="deleteButton" />
            </div>
            <div class="backButtonContainer">
                @Html.ActionLink("Back to List", "Index", new { }, new { @class = "actionButton" })
            </div>
        }
    </div>
</div>