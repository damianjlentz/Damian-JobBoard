@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Details";
}

<div class="pageTitleContainer">
    <div class="pageTitle">@Html.DisplayFor(model => model.Name) Details</div>
</div>
<div class="editUserContainer">

    <h4>List of users in this role</h4>
    @if (ViewBag.UserCount == 0)
    {
        <hr />
        <p>No users found in this role.</p>
    }

    <table class="table">

        @foreach (var item in ViewBag.Users)
        {
            <tr>
                <td>
                    @item.UserName
                </td>
            </tr>
        }
    </table>
    <div class="editUserSaveContainer">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "actionButton" })
    </div>
    <div class="backButtonContainer">
        @Html.ActionLink("Back to List", "Index", new { }, new { @class = "actionButton" })
    </div>
</div>



